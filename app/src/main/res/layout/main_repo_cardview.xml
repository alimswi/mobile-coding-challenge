<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/repository_card_margin"
    android:minHeight="@dimen/repository_card_min_height"
    android:maxHeight="@dimen/repository_card_max_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="4"
        >
      <TextView
          android:id="@+id/txtRepoName"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:textStyle="bold"
          android:textSize="24sp"
          android:layout_weight="1"/>
        <TextView
            android:id="@+id/txtRepoDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textSize="14sp"
            android:layout_weight="1.5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgRepoOwnerImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/repository_card_owner_image_padding"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/txtRepoOwner"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:gravity="center|start"
                android:layout_marginStart="2dp"
                android:textStyle="bold"
                android:layout_weight="2"/>
            <ImageView
                android:id="@+id/imgRepoStar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/star"
                android:scaleType="fitCenter"
                android:layout_weight="0.35"/>
            <TextView
                android:id="@+id/txtRepoStarCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:gravity="center|start"
                android:textSize="20sp"
                android:layout_marginStart="2dp"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>